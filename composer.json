{
    "name": "rtcamp/post-slideshow",
    "autoload": {
        "psr-4": {
            "RtCamp\\PostSlideshow\\": "includes/"
        }
    },
    "authors": [
        {
            "name": "Faisal Hossain Shuvo",
			"email": "contact@faisalshuvo.com"
        }
    ],
    "minimum-stability": "stable",
	"require-dev": {
		"phpstan/phpstan": "^1.11",
		"phpstan/extension-installer": "^1.4",
		"szepeviktor/phpstan-wordpress": "^1.3",
		"php-stubs/woocommerce-stubs": "^9.0",
		"php-stubs/wordpress-stubs": "^6.5",
		"squizlabs/php_codesniffer": "^3.10",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcompatibility/php-compatibility": "^9.3",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"wp-coding-standards/wpcs": "^3.1",
		"automattic/vipwpcs": "^3.0"
	},
	"scripts": {
		"phpcs": "@php ./vendor/bin/phpcs --standard=phpcs.xml --colors --extensions=php .",
		"phpcbf": "@php ./vendor/bin/phpcbf --standard=phpcs.xml --colors --extensions=php ."
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		}
	}
}
